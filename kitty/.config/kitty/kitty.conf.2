# -------------------------------------------- Шрифт --------------------------------------------
font_family Ubuntu Mono Regular
italic_font auto
bold_font auto
font size 12.0

# -------------------------------------------- Тема --------------------------------------------
# Цвет шрифта
foreground #f8f8f2
# Цвет фона
background #232627
# Шрифт подсветки URL
url_color #d65c9d
# Стиль подсветки URL
url_style straight
term xterm-256color
# Непрозрачность терминала
background_opacity 1.0

# -------------------------------------------- Курсор --------------------------------------------
# Цвет курсора
cursor #8fee96
# Стиль курсора
cursor_shape underline
# Интеграция с другими приложениями
shell_integration no-cursor
# Мерцание курсора
cursor_blink_interval 0

# -------------------------------------------- Аудио --------------------------------------------
# Включение или отключение аудио
enable_audio_bell no

# -------------------------------------------- Окно --------------------------------------------
remember_window_size  no
# Ширина окна
initial_window_width  1700
# Высота окна
initial_window_height 600
#
window_margin_width 3

# -------------------------------------------- Таб-бар --------------------------------------------
# Стиль таб-бара
tab_bar_style powerline
# Стиль таб-бара powerline
tab_powerline_style slanted
